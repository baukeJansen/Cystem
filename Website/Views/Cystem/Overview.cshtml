@using Website.Common.Viewmodels
@using Website.Controllers.Cystem
@model BasicViewModel

<div class="container">
    <div class="row">
        <div class="col s12">
            <h1>System</h1>
        </div>
    </div>
    
    <div class="row">
        <div class="col l4 m6 s12">
            <a href="@(Url.Action<DailyEggController>(c => c.Overview(null)))" class="ajax-get card grey darken-3">
                <div class="card-content white-text">
                    <span class="card-title">Legpercentage</span>
                    <p>
                        Geef hier het legpercentage op en bekijk de huidige gevens.
                    </p>
                </div>
            </a>
        </div>

        <div class="col l4 m6 s12">
            <a href="@(Url.Action<DeadChickenController>(c => c.Overview(null)))" class="ajax-get card grey darken-3">
                <div class="card-content white-text">
                    <span class="card-title">Dode kippen</span>
                    <p>
                        Vul hier het aantal dode kippen in.
                    </p>
                </div>
            </a>
        </div>

        @for (int i = 0; i < 8; i++)
        {
            @:<div class="col l4 m6 s12">
                <div class="card grey darken-3">
                    <div class="card-content white-text">
                        <span class="card-title">Card Title</span>
                        <p>
                            I am a very simple card. I am good at containing small bits of information.
                            I am convenient because I require little markup to use effectively.
                        </p>
                    </div>
                </div>
            @:</div>
        }
    </div>
</div>
