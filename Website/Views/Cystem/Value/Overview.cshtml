@using Website.Common.Models.EAV
@using Website.Common.Models.EAV.EAVInterfaces
@using Website.Common.Viewmodels
@using Website.Common.Enums
@model ValueOverviewViewModel

<div class="container">
    <div class="row">
        <div class="col s12">
            <h1>Values overview</h1>

            @Html.LargeButton(Url.Action("create", "value", new { Area = "Cystem" }), ElementAction.Overlay)

            <table>
                <tbody>
                    @foreach (Value value in Model.Values)
                    {
                    <tr>
                        <td>@value.Id</td>
                        <td>@value.Attribute.Label</td>

                        <td>
                            @if (value is IStringValue)
                            {
                                @(((IStringValue)value).String)

                            }
                            @if (value is IIntValue)
                            {
                                @(((IIntValue)value).Int)
                            }
                            @if (value is ISerializedStringValue)
                            {
                                @(((ISerializedStringValue)value).SerializedString)
                            }
                        </td>
                        <td><a href="@Url.Action("Edit", "Value", new { id = value.Id, Area = "Cystem"})" class="ajax-get" data-on-result="@ElementAction.Overlay"><i class="material-icons">edit</i></a></td>
                        <td><a href="@Url.Action("Delete", "Value", new { id = value.Id, Area = "Cystem"})" class="ajax-get" data-on-result="@ElementAction.Overlay"><i class="material-icons">delete</i></a></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>