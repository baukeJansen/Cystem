@using Website.Common.Viewmodels
@using Website.Common.Extensions
@using Website.Common.Enums
@model ActionViewModel

@{
    Layout = Model.Layout.Name();

    if (Model.GetType() == typeof(GenericViewModel))
    {
        GenericViewModel model = (GenericViewModel)Model;

        switch(model.Options)
        {
            case DisplaySetting.Json:
                Layout = "DataLayout";
                break;

            case DisplaySetting.Xml:
                Layout = "DataLayout";
                break;
        }
    }
}